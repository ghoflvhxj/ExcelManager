<Window x:Class="TestWPF.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPF"
        mc:Ignorable="d"
        Title="TextInputDialog" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SizeToContent="WidthAndHeight">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,30,20,30">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="InputTextBox" Width="200" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Margin="10,0,0,0" Padding="10,1,10,1" Click="Button_Click">확인</Button>
        </StackPanel>
    </Grid>
</Window>
